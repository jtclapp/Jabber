<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewSelectedThread">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container7">
    </FrameLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f8fbf8"
        android:id="@+id/ViewThreadItems">

        <TextView
            android:id="@+id/view_thread_title"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:gravity="start"
            android:textSize="18sp"
            android:inputType="textShortMessage"
            android:textColor="@color/black" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/ViewThreadImages"
            android:layout_width="380dp"
            android:layout_height="250dp"
            android:layout_below="@+id/view_thread_title"
            android:background="@drawable/ic_black_logo___no_background"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/view_photoCount"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/gray"
            android:layout_below="@+id/ViewThreadImages"/>

        <TextView
            android:id="@+id/view_thread_caption"
            android:layout_width="400dp"
            android:layout_height="280dp"
            android:layout_below="@id/view_photoCount"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:textSize="17sp"
            android:hint=" What do you want to discuss?"
            android:inputType="textMultiLine"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_boarder"
            android:textColorHint="@color/gray" />
    </RelativeLayout>
</RelativeLayout>