<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">#303841</item>
        <item name="android:colorPrimaryDark">#303841</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:itemTextAppearance">@style/itemTextStyle.AppTheme</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MyMenuStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">#303841</item>
        <item name="android:textColor">"#f8fbf8"</item>
    </style>
    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">#828282</item>
        <item name="android:textColor">"#f8fbf8"</item>
    </style>
    <style name="itemTextStyle.AppTheme" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">"#f8fbf8"</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>